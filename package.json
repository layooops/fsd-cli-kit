{
  "name": "fsd-cli-kit",
  "version": "1.0.4",
  "description": "A CLI tool for easily FSD development",
  "keywords": [
    "cli",
    "feature-sliced-design",
    "fsd"
  ],
  "homepage": "https://github.com/layooops/fsd-cli-kit#readme",
  "bugs": {
    "url": "https://github.com/layooops/fsd-cli-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/layooops/fsd-cli-kit"
  },
  "license": "MIT",
  "author": {
    "name": "Vitalii Astakhov",
    "email": "vitalastakhov@gmail.com"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "main": "dist/index.js",
  "bin": {
    "fsd-cli-kit": "./dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "\n======= HELPERS ============================": "",
    "ts": "tsc --noEmit",
    "ts:watch": "npm run ts -- --watch",
    "\n======= DEVELOPMENT =========================": "",
    "dev": "tsup --watch",
    "\n======= PRODUCTION ==========================": "",
    "build": "env NODE_ENV=production tsup",
    "start": "node dist/index.js",
    "\n======= LINTING ============================": "",
    "format:fix": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint -c .eslintrc.cjs \"./src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint -c .eslintrc.cjs \"./src/**/*.{ts,tsx,js,jsx}\" --fix",
    "\n======= TESTING ============================": "",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "chalk": "^5.3.0",
    "change-case": "^5.2.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@conarti/eslint-plugin-feature-sliced": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "code-review-gpt": "^0.1.5",
    "eslint": "^8.54.0",
    "eslint-kit": "^10.6.0",
    "eslint-plugin-check-file": "^2.6.2",
    "eslint-plugin-regexp": "^2.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-json-schema-generator": "^1.4.0",
    "tsup": "^8.0.1",
    "type-fest": "^4.8.2",
    "typescript": "^5.3.2",
    "typescript-json-schema": "^0.62.0"
  },
  "engines": {
    "node": ">=14.16"
  }
}
